<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_for_tasks"
    android:padding="16dp">

    <!-- Название задачи -->
    <TextView
        android:id="@+id/taskNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- Контейнер для Важность и Приоритет -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/taskNameTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp">

        <!-- Текст Важность -->
        <TextView
            android:id="@+id/importanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Важность:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="4dp"/>

        <!-- Приоритет задачи -->
        <ImageView
            android:id="@+id/taskPriorityImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Аватарка задачи -->
    <ImageView
        android:id="@+id/taskAvatarImageView"
        android:layout_width="40dp"
        android:layout_height="40dp" android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"/>

</RelativeLayout>
